[Unit]
Description=This service update the system and after reboot it sends an email notifitcating that the systemed rebooted successfully
Before=shutdown.target

[Service]
Type=oneshot
ExecStart=/bin/bash -c "yay -Syua --noconfirm"
User=admin
Group=admin

ExecStart=/bin/bash -c "pacman -Syu --noconfirm"
User=root
Group=root
TimeoutStartSec=0

[Install]
WantedBy=multi-user.target
 
